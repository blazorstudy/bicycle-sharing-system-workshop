    <ProjectReference Include="..\BicycleSharingSystem.Rental\BicycleSharingSystem.Rental.csproj" />
    <ProjectReference Include="..\Jamesnet.Uno\Jamesnet.Uno.csproj" />
  </ItemGroup>

</Project>
