<UserControl
    Background="Transparent"
    d:DesignHeight="895"
    d:DesignWidth="540"
    mc:Ignorable="d"
    x:Class="BicycleSharingSystem.Kiosk.Pages.RentalOffice.Index"
    xmlns="https://github.com/avaloniaui"
    xmlns:component="clr-namespace:BicycleSharingSystem.Kiosk.Pages.RentalOffice.Component"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:BicycleSharingSystem.Kiosk.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="Component/RentalOfficePanel.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Design.DataContext>
        <vm:RentalOfficeViewModel />
    </Design.DataContext>

    <Border Padding="10,10">
        <StackPanel Orientation="Vertical" Spacing="10">
            <ComboBox ItemsSource="{Binding Regions}" SelectedItem="{Binding SelectedRegions}" />
            <component:RentalOfficePanel ItemsSource="{Binding FilterRentalOffices}" />
        </StackPanel>
    </Border>
</UserControl>
