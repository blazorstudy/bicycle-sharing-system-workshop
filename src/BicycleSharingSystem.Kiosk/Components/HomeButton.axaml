<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:BicycleSharingSystem.Kiosk.Components"
        xmlns:i="https://github.com/projektanker/icons.avalonia">
    <StyleInclude Source="NavigationButtonStyle.axaml" />
    <Design.PreviewWith>
        <Grid Background="White" Width="90" Height="90">
            <controls:HomeButton />
        </Grid>
    </Design.PreviewWith>

    <Style Selector="controls|HomeButton">
        <Setter Property="Background" Value="Transparent"/>
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel>
                    <i:Icon Value="mdi-home"/>
                    <TextBlock Text="처음화면"/>
                </StackPanel>
            </ControlTemplate>
        </Setter>
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="#dde0e1"></Setter>
        </Style>
    </Style>
</Styles>