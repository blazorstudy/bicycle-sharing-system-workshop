<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:BicycleSharingSystem.Kiosk.Components"  
        xmlns:i="https://github.com/projektanker/icons.avalonia">
    <StyleInclude Source="../Styles/BaseStyle.axaml" />
    <Design.PreviewWith>
        <Grid Background="White" Width="77" Height="90">
            <controls:RentalOfficeButton />
        </Grid>
    </Design.PreviewWith>
    <Style Selector="controls|RentalOfficeButton">
        <Setter Property="Background" Value="Transparent"/>
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Background="{TemplateBinding Background}" Width="90">
                    <i:Icon Value="mdi-bike"/>
                    <TextBlock Text="처음화면" Classes="NavigationText"/>
                </StackPanel>
            </ControlTemplate>
        </Setter>
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="#dde0e1"></Setter>
        </Style>
    </Style>
</Styles>
